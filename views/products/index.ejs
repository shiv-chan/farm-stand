<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Farm Stand</title>
	</head>
	<body>
		<h1>
			<% if (category !== 'All') { %> <%= category.charAt(0).toUpperCase() +
			category.slice(1) %> <% } else { %> All <% } %> Products
		</h1>
		<section>
			<% for(let p of products){ %>
			<li><a href="/products/<%= p._id %>"><%= p.name %></a></li>
			<% } %>
		</section>
		<a href="/products/new"><button>Add a New Product</button></a>
		<% if (category !== 'All') { %>
		<a href="/products"><button>Back to All Products</button></a>
		<% } %>
	</body>
</html>
